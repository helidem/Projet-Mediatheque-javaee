<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>InitListener</listener-class>
    </listener>

    <!-- LOGIN -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>services.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- ADD_DOCUMENT -->
    <servlet>
        <servlet-name>addDocument</servlet-name>
        <servlet-class>services.auth.addDocumentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDocument</servlet-name>
        <url-pattern>/addDocument</url-pattern>
    </servlet-mapping>

</web-app>